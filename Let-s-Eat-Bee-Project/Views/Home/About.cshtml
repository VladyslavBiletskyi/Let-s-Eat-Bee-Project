@{
    ViewBag.Title = "About";
}
<div class="block-content">
    <div class="container">
        <div id="about-block">
            <h3>Our features</h3>
            <br />

            <div class="row">
                <div class="col s12 m4">
                    <div class="#6a1b9a purple darken-3 card-panel">
                        <i class="large material-icons">playlist_add</i>
                        <h5>Create order groups</h5>
                        <span class="white-text">
                            Sign up, sign in or just enter information and create an order group.
                        </span>
                    </div>
                </div>
                <div class="col s12 m4">
                    <div class="#6a1b9a purple darken-3 card-panel">
                        <i class="large material-icons">chat_bubble_outline</i>
                        <h5>Chat inside your order</h5>
                        <span class="white-text">
                            Discuss details of the meals order with people inside your order group.
                        </span>
                    </div>
                </div>
                <div class="col s12 m4">
                    <div class="#6a1b9a purple darken-3 card-panel">
                        <i class="large material-icons">supervisor_account</i>
                        <h5>Join order groups</h5>
                        <span class="white-text">
                            Search for existing order groups which are close to you and join them.
                        </span>
                    </div>
                </div>
            </div>
            @if (!User.Identity.IsAuthenticated)
            {
                <a class="waves-effect waves-light btn #4a148c purple darken-3" href="../Account/SignUp">Join us</a>
                <a class="waves-effect waves-light btn #4a148c purple darken-3" href="../Account/SignIn">Sign in</a>
            }
         </div>
    </div>
</div>