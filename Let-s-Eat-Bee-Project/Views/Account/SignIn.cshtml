@model Let_s_Eat_Bee_Project.Models.ReportViewModel
@{
    ViewBag.Title = "Sign In";
}

<!--ЦЕНТРАЛЬНЫЙ БЛОК-->
<div class="block-content">
    <div class="container">
        <div id="signin-block">
            <h3>Sign in</h3>
            <div class="row">
            @using (Html.BeginForm("SignIn", "Account", FormMethod.Post, new { id = "report_request" }))
            {
                @Html.ValidationSummary();
                <form class="col s12" method="post" id="signin-form">
                    <div class="row">
                        <div class="input-field col s12">
                            <label for="email">E-Mail</label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @type = "email",  @id = "email", @required = "true"} })
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <label for="password">Password</label>
                            @Html.EditorFor(model => model.Pass, new { htmlAttributes = new { @type = "password", @id = "password",  @required = "true" } })
                        </div>
                    </div>
                    <button type="submit" class="waves-effect waves-light btn #4a148c purple darken-3" id="signin" disabled>Sign in</button>
                </form>
                }
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Scripts/signinValidation.js"></script>
<!--КОНЕЦ ЦЕНТРАЛЬНОГО БЛОКА-->
