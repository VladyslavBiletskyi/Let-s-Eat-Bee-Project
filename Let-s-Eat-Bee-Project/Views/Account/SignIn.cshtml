@model Let_s_Eat_Bee_Project.Controllers.AccountController.ReportViewModel
@{
    ViewBag.Title = "SignIn";
}

<!--ЦЕНТРАЛЬНЫЙ БЛОК-->
<div class="block-content">
    <div class="container">
        <div id="signin-block">
            <h3>Sign in</h3>
            <div class="row">
            @using (Html.BeginForm("SignIn", "Account", FormMethod.Post, new { id = "report_request" }))
            {
                <form class="col s12" method="post">
                    <div class="row">
                        <div class="input-field col s12">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @for = "email" })
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @type = "email", @class = "validate", @id = "email", @required = "true" } })
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            @Html.LabelFor(model => model.Pass, htmlAttributes: new { @for = "password" })
                            @Html.EditorFor(model => model.Pass, new { htmlAttributes = new { @type = "password", @id = "password", @class = "validate", @required = "true" } })
                        </div>
                    </div>
                    <button type="submit" class="waves-effect waves-light btn #4a148c purple darken-3">Sign in</button>
                </form>
                }
            </div>
        </div>
    </div>
</div>
<!--КОНЕЦ ЦЕНТРАЛЬНОГО БЛОКА-->
